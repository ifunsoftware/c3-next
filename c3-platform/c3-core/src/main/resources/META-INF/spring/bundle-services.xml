<?xml version="1.0" encoding="UTF-8"?>
<beans:beans                                                                             
   xmlns="http://www.springframework.org/schema/osgi"                                    
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:beans="http://www.springframework.org/schema/beans"                             
   xsi:schemaLocation="http://www.springframework.org/schema/osgi  
       http://www.springframework.org/schema/osgi/spring-osgi-1.2.xsd
       http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <service id="storageService" ref="storageManager"                                  
       interface="org.aphreet.c3.platform.storage.StorageManager" />
       
    <service id="taskService" ref="taskManager"
       interface="org.aphreet.c3.platform.task.TaskManager"/>

    <service id="versionService" ref="versionManager"
       interface="org.aphreet.c3.platform.config.VersionManager"/>
       
    <service id="queryService" ref="queryManager"
       interface="org.aphreet.c3.platform.query.QueryManager"/>

    <service id="accessService" ref="accessManager"
       interface="org.aphreet.c3.platform.access.AccessManager"/>

    <service id="accessMediatorService" ref="accessMediator"
       interface="org.aphreet.c3.platform.access.AccessMediator"/>
       
    <service id="managementService" ref="platformManagementEndpoint"
       interface="org.aphreet.c3.platform.management.PlatformManagementEndpoint"/>

    <service id="configService" ref="platformConfigManager"
       interface="org.aphreet.c3.platform.config.PlatformConfigManager"/>

    <service id="statisticsService" ref="statisticsManager"
       interface="org.aphreet.c3.platform.statistics.StatisticsManager"/>

    <service id="metadataService" ref="metadataManager"
             interface="org.aphreet.c3.platform.metadata.MetadataManager"/>

</beans:beans>  