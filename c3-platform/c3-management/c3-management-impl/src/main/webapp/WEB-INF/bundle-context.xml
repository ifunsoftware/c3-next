<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />

    <context:component-scan base-package="org.aphreet.c3.platform.remote.impl" />

    <bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties">
            <props>
                <prop key="rmi.port">1299</prop>
            </props>
        </property>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
    </bean>

    <bean class="org.aphreet.c3.platform.remote.rmi.MacRmiServiceExporter">
        <property name="serviceName" value="PlatformRmiManagementEndPoint" />
        <property name="service" ref="platformManagementService" />
        <property name="serviceInterface" value="org.aphreet.c3.platform.remote.api.management.PlatformManagementService" />
        <property name="registryPort" value="${rmi.port}" />
    </bean>

    <bean class="org.aphreet.c3.platform.remote.rmi.MacRmiServiceExporter">
        <property name="serviceName" value="PlatformRmiAccessEndPoint" />
        <property name="service" ref="platformAccessService" />
        <property name="serviceInterface" value="org.aphreet.c3.platform.remote.api.access.PlatformAccessService" />
        <property name="registryPort" value="${rmi.port}" />
    </bean>
    
</beans>