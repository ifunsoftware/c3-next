<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.aphreet.c3.web.entity">
	<class name="User" table="users">
		<id name="id" >
			<generator class="native"/>
		</id>
		<property name="name" type="string" column="username" not-null="true" unique="true"/>
		<property name="password" not-null="true"/>
		<property name="enabled" not-null="true"/>
		<property name="mail" unique="true" not-null="true"/>
		<property name="createDate" column="create_date" not-null="true"/>
		<set name="roles" table="authorities">
			<key column="username" property-ref="name"/>
			<element column="authority" type="string"/>
		</set>
		<one-to-one name="userProfile" class="UserProfile" constrained="false" cascade="all"/>
	</class>
	
	<class name="UserProfile" table="user_profile">
		<id name="id">
			<generator class="foreign">
				<param name="property">user</param>
			</generator>
		</id>
		<property name="name"/>
		<property name="family"/>
		<property name="info" type="text"/>
		<property name="birthDate"/>
		<property name="im"/>
		
		<map name="settings" table="user_settings">
			<key column="user_id"/>
			<map-key type="string"/>
			<element type="string"/>
		</map>
		
		<one-to-one name="user" constrained="false"/>
	</class>
	
	<class name="AbstractGroup" table="groups" abstract="true">
		<id name="id">
			<generator class="native"/>
		</id>
		<discriminator type="string" column="group_type"/>
		<property name="name" not-null="true" unique="true"/>
		<property name="urlName" not-null="true" unique="true"/>
		<property name="description" type="text"/>
		<property name="createDate" column="create_date"/>
		<many-to-one name="owner" class="User" column="owner_id" lazy="false"/>
		
		<subclass name="SingleUserGroup" discriminator-value="SINGLE_USER_GROUP"/>
		
		<subclass name="WorkGroup" discriminator-value="WORK_GROUP">
			<set name="members" table="group_members" lazy="false">
				<key column="group_id"/>
				<many-to-many class="User" column="user_id" order-by="username"/>
			</set>
		</subclass>
	</class>
	
	<!-- 
	<query name="groups_where_user_is_member">select group from org.aphreet.c3.entity.WorkGroup group, 
		org.aphreet.c3.entity.User usr 
		where
			usr.id = :user_id 
			and (usr in elements(group.members))
	</query>
	-->
	
	<query name="groups_where_user_is_owner">from org.aphreet.c3.web.entity.AbstractGroup group 
		where group.owner.id = :user_id
	</query>
</hibernate-mapping>