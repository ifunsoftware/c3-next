<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">
	<application>
		<el-resolver>
			org.aphreet.springframework.web.MessageBundleElVariableResolver</el-resolver>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>ru</supported-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
	</application>

	<navigation-rule>
		<from-view-id>/add.jspx</from-view-id>
		<navigation-case>
			<from-action>#{addUserBean.saveUser}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/list.jspx</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{addUserBean.saveUser}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/error.jspx</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/user/signup.jspx</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
</faces-config>